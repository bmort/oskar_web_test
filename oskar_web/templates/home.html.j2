{% extends 'layout.html' %} {% block body %}

  {% if new_release %}

    <div class="alert alert-info alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert">
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
      </button>
      <strong>New Release!</strong>
      <a href="/releases/{{ data['current_release'] }}">
        OSKAR {{ data['current_release'] }}
      </a> released!
    </div>

  {% endif %}

  <div class="container-fluid" id="oskar-welcome">
    <div class="row justify-content-sm-center">
      <div class="col-sm">
        <h1 class="text-center">Welcome to the OSKAR simulator!</h1>
        <p class="lead text-center">A GPU accelerated interferometer
          simulator for the <a href="https://www.skatelescope.org/">
          Square Kilometre Array</a>.
        </p>
      </div>
    </div>
    <br>
    <br>
    <div class="row justify-content-sm-center">
      <div class="col-sm">
        <p class="text-center">
          OSKAR has been designed to produce simulated visibility data from
          radio telescopes containing aperture arrays, such as those
          envisaged for the Square Kilometre Array.
        </p>

        <p class="text-center">
          The current version of OSKAR is
          <a href="/downloads/current">
            {{ data['current']['data']['name'] }}
          </a>.
        </p>
      </div>
    </div>
  </div>

{% endblock %}
